include includes/mixins.pug

doctype
html(lang="en")
  head
    include includes/header.pug
  body
    include includes/navbar.pug
    script(src='/js/commands.js',defer)
    link(rel='stylesheet', href='/css/commands.css')
    
    style.
      #search {
        max-width: 300px;
      }
      
      #search + button {
        height: 64px;
        border: none;
      }
    
    .container
      .jumbotron.text-center.bg-transparnet
        h1.display-3 Commands
        p.lead View the commands for Panda Bot.
        hr

      section#commands
        .d-flex.justify-content-center
          #search.form-group.p-3
            input.form-control(type='search')
          button
            i.fas.fa-search
        .row
          .col-sm-3.categories
            each category in categories
              +category(category)
          .col-sm-9
            each category in commands
                each command in category
                  +command(command)
    
